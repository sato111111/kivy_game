        canvas.before:
            Color:
                rgb: .6, .6, .3
            Rectangle:
                pos: self.pos
                size: self.size
        canvas.after:
            Color:
                rgb:.55, .55, .25
            Line:
                points: self.x,self.y+self.height,self.width,self.y+self.height
                width:1.3
