#これはスクリーン化する予定
<OpeningWidget>:
    orientation: 'vertical'
    size: root.size

    canvas.before:
        Color:
            rgb:[1,1,1]
<BattleField@BoxLayout>:
    id:battle_field

<HeroCard>:
    particle:particle
    hero_card:hero_card
    id:hero_card

    selected_art:selected_art
    card_pos_x:root.center_x
    card_pos_y:root.center_y
    is_active:"standby"

    atk:0
    pro:0
    spd:0
    name:name
    hpbar:hpbar




    orientation:'vertical'
    source:"image/txtr.png"

    always_release: True

    on_release:
        #root.test_hp_damage(10)
        root.arts_on_display()

        root.parent.parent.children[1].strt_x = self.center_x
        root.parent.parent.children[1].strt_y = self.center_y

    canvas.before:

        Color:
            rgba: (.2,.2,.5,.85) if self.state == 'normal' else (.5,.5,.8,.85)

        Rectangle:
            size:self.width+10,self.center_y-self.y
            pos:self.x,self.center_y

    Cstmlbl_fs15:
        bs_fntsz:26
        id:name
        size_hint:1,.2

    StatusBar:
        id:hpbar
        size_hint:1,.12
        canvas.before:
            Color:
                rgb:.3,.7,.3
            Rectangle:#緑ゲージ
                pos:self.pos
                # 参考:px * (最大HP - 現在のHP) / 最大HP
                size:self.width-self.width*(self.max - self.now)/self.max, self.height

    Cstmlbl_fs15:
        size_hint:1,.2
        id:selected_art
        text:'(技名スペース)'
    Label:
        id:particle
        part_c:0
        part_x:0
        part_y:0
        size_hint:1,.5
        canvas.after:
            Color:
                rgb:1,1,1
            Rectangle
                size:5,5
                pos:self.center_x+self.part_x,self.center_y+self.part_y


<StatusBar@Cstmlbl_fs15>:
    max:1
    now:1
    canvas.before:
        #オーバーゲージ(緑)は実装時に記述しないとエラーになる
        Color:
            rgb:.14,.14,.14
        Rectangle:#赤ゲージ
            pos:self.pos
            size:self.width,self.height
    canvas.after:
        Color:
            rgb:.4,.5,.3
        Line:
            rectangle: self.x+1.3,self.y,self.width,self.height
            width:1.3


<EnemyCard@SuperCard>:

    enemy_card:enemy_card
    id:enemy_card
    name:name
    hpbar:hpbar

    atk:1
    pro:1
    spd:1


    padding:50
    strt_x: 00
    strt_y: 00

    goal_x: self.center_x
    goal_y: self.center_y

    tri_x: 30
    tri_y: self.tri_x /2.38
    cir_size_x: 14
    cir_size_y: self.cir_size_x


    always_release:True
    orientation:'vertical'
    on_release:
        root.enemy_select()

    canvas.before:
        Color:
            rgba: (.5,.2,.2,.85)if self.state == 'normal' else (.8,.5,.5,.85)
        Ellipse:
            pos:self.pos
            size:self.size

    Cstmlbl_fs15:
        bs_fntsz:26
        id:name
        size_hint:1,.2

    StatusBar:
        id:hpbar
        size_hint:1,.12
        canvas.before:
            Color:
                rgb:.3,.7,.3
            Rectangle:#緑ゲージ
                pos:self.pos
                # 参考:px * (最大HP - 現在のHP) / 最大HP
                size:self.width-self.width*(self.max - self.now)/self.max, self.height




<HeroesField,EnemiesField>:
    orientation:'vertical'
    spacing:10
    padding:10

<MSettingScreen,BSettingScreen>:
    canvas.before:
        Color:
            rgb:0,0,.3
        Rectangle:
            #いい感じの画像があったら下記に挿入（背景変更）
            #source: "image/a.jpg"
            pos: self.pos
            size: self.size
    size_hint:1,1
    BoxLayout:
        orientation:'vertical'
        padding:10
        spacing:10
        Widget:
            size_hint:1,.4

        MenuButton:
            id:'root_screen_return'
            on_release:
                root.main_slide()
            Cstmlbl_fs15:
                id:'back'
                text:"ゲームに戻る"

        MenuButton:
            on_release:

            Cstmlbl_fs15:
                id:'back'
                text:"設定画面(未実装)"

        MenuButton:
            id:'menu'
            on_release:


            Cstmlbl_fs15:
                id:'back'
                text:"(未実装)"

        MenuButton:
            id:'menu_btn'
            on_release:


            Cstmlbl_fs15:
                id:'back'
                text:"(未実装)"

        MenuButton:
            on_release:
                self.clr = self.bs_clr


            BoxLayout:
                orientation:'horizontal'
                Cstmlbl_fs15:
                    text:"ButtonBehavior\n in BoxLayout \n A"
                Cstmlbl_fs15:
                    text:"ButtonBehavior\n in BoxLayout \n B"
        Widget:
            size_hint:1,.4

<MenuButton@CustomBB+BoxLayout+Cstmlbl_fs15>:
    canvas.before:
        Color:
            rgb: (0,.3,.3) if self.state == 'normal' else (1,.3,.3)
        Rectangle:
            pos:self.pos
            size:self.size
            #texture: self.texture
        Color:
            rgb: (0,.2,.2) if self.state == 'normal' else (.5,.1,.1)
        Line:
            rectangle: self.x+2,self.y+2,self.width-2,self.height-2
            width:2 if self.width >250 else 1
        Color:
            rgb: (0,.1,.1) if self.state == 'normal' else (.4,.05,.05)
        Line:
            rectangle: self.x,self.y,self.width,self.height
            width:2 if self.width >250 else 1
<CustomBB@ButtonBehavior>
    always_release:True



<Cstmlbl_fs20@Label>:
    markup:True
    bs_fntsz: 20
    lmt_fntsz: self.bs_fntsz*5
    font_size: self.bs_fntsz if self.bs_fntsz * self.width / self.lmt_fntsz >= self.bs_fntsz else self.bs_fntsz * self.width /self.lmt_fntsz

<Cstmlbl_fs15@Label>:
    color:(.97, .8, .3)
    markup:True
    outline_width : 2
    outline_color :(.6, .4, .2,.6)
    bs_fntsz: 15
    lmt_fntsz: self.bs_fntsz*6
    font_size: self.bs_fntsz if self.bs_fntsz * self.width / self.lmt_fntsz >= self.bs_fntsz else self.bs_fntsz * self.width /self.lmt_fntsz


<Cstmlbl_fs@Label>:
    markup:True
    bs_fntsz: 15
    lmt_fntsz: self.bs_fntsz*2
    font_size: self.bs_fntsz if self.bs_fntsz * self.width / self.lmt_fntsz >= self.bs_fntsz else self.bs_fntsz * self.width /self.lmt_fntsz
<Cstmlbl_fs12@Label>:
    markup:True
    bs_fntsz: 12
    lmt_fntsz: self.bs_fntsz * 10
    font_size: self.bs_fntsz if self.bs_fntsz * self.width / self.lmt_fntsz >= self.bs_fntsz else self.bs_fntsz * self.width /self.lmt_fntsz

