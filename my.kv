<SuperButtonLayout>:
    id:main_widget

    padding:10
    spacing:10
    cols:3
    size_hint :1,.16
<MainButtonLayout>:
    MenuButton:
        size_hint :1,.8
        id:a_btn
        text:'A'
        is_info:''
        on_release:
            root.pushed_btn(self.text)
    MenuButton:
        size_hint :1,.8
        id:b_btn
        text:'B'
        is_info:''
        on_release:
            root.pushed_btn(self.text)
    MenuButton:
        size_hint :1,.8
        id:c_btn
        text:'C'
        is_info:''
        on_release:
            root.pushed_btn(self.text)
<BattleButtonLayout>:
    id:battle_button_layout
    target_type:""
    a_btn:a_btn
    b_btn:b_btn
    c_btn:c_btn


    MenuButton:
        size_hint :1,.8
        id:a_btn
        text:'A'
        on_release:
            if root.select_hero != "":root.action_exe(0)
            else:root.pushed_btn(self.text)

    MenuButton:
        size_hint :1,.8
        id:b_btn
        text:'B'
        on_release:
            if root.select_hero != "":root.action_exe(1)
            else: root.pushed_btn(self.text)

    MenuButton:
        size_hint :1,.8
        id:c_btn
        text:'C'
        on_release:
            if root.select_hero != "":root.action_exe(2)
            else: root.pushed_btn(self.text)


